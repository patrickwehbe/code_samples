{
  "name": "boilerplate-express-service",
  "version": "0.0.1",
  "description": "Boilerplate express service - REST APIs",
  "main": "index.js",
  "license": "ISC",
  "scripts": {
    "start": "node -r ts-node/register ./src/app.ts",
    "dev": "nodemon --config nodemon.json ./src/app.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/app.ts",
    "debug": "SET DEBUG=* && nodemon --config nodemon.json --inspect-brk ./src/app.ts",
    "generate-types": "openapi --input ./docs/swagger.json --output ./src/__generated__ --exportCore false --exportServices false",
    "test": "echo \"Error: no test specified\" && exit 1",
    "create-database": "set NODE_ENV=development&& node -r ts-node/register ./database-scripts/db-config.ts",
    "seed-database": "set NODE_ENV=development&& node -r ts-node/register ./database-scripts/db-seed.ts",
    "setup-database": "set NODE_ENV=development&& npm run create-database && npm run seed-database",
    "create-database-stg": "set NODE_ENV=staging&& node -r ts-node/register ./database-scripts/db-config.ts",
    "seed-database-stg": "set NODE_ENV=staging&& node -r ts-node/register ./database-scripts/db-seed.ts",
    "setup-database-stg": "set NODE_ENV=staging&& npm run create-database-stg && npm run seed-database-stg",
    "create-database-prod": "set NODE_ENV=production&& node -r ts-node/register ./database-scripts/db-config.ts",
    "seed-database-prod": "set NODE_ENV=production&& node -r ts-node/register ./database-scripts/db-seed.ts",
    "setup-database-prod": "set NODE_ENV=production&& npm run create-database-prod && npm run seed-database-prod",
    "build": "tsc -p ."
  },
  "dependencies": {
    "common-platform-express": "../common-platform-express",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.12.2",
    "class-validator-jsonschema": "^3.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-http-context": "^1.2.4",
    "form-data": "^4.0.0",
    "glob": "^7.1.7",
    "helmet": "^4.3.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0-alpha.6",
    "routing-controllers-openapi": "^3.0.0",
    "swagger-ui-express": "^4.1.6",
    "typedi": "^0.9.1",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.9",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.9",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.14.20",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "eslint": "^7.17.0",
    "nodemon": "^2.0.7",
    "openapi-typescript-codegen": "^0.9.3",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
